

<main class="lista-vacantes">
    <h2>Navegaci√≥n</h2>
    <div class="botones separador">
        <a href="/editar-perfil" class="btn btn-azul">Editar Perfil</a>
        <a href="/vacantes-nueva" class="btn btn-verde">Editar Perfil</a>
    </div>
    <h2>Tus vacantes</h2>
    {{#if vacantes.length}}
        {{#each vacantes}}
            <div class="vacante panel-administracion">
                <div class="caja">
                    <h3>{{vacantes.empresa}}</h3>
                    <p class="puesto">{{vacantes.titulo}}</p>
                </div>
                <div class="centrar-vertical caja">
                    <a href="/candidato/{{vacantes.id}}" class="btn btn-amarillo">Candidatos</a>
                </div>
                <div class="centrar-vertical caja">
                    <a href="/vacantes/editar/{{vacantes.url}}" class="btn btn-verde">Editar</a>
                </div>
                <div class="centrar-vertical caja">
                    <a href="#" data-eliminar={{vacantes.id}} class="btn btn-rojo">Eliminar</a>
                </div>

            </div>
            
        {{/each}}
    {{else}}
    {{/if}}
</main>