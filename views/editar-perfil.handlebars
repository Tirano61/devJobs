

<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label >Nombre</label>
            <input value="{{usuario.nombre}}" type="text" name="nombre" placeholder="Tu nombre" >
        </div>
        <div class="campo">
            <label >Email</label>
            <input value="{{usuario.email}}" type="email" name="email" placeholder="Tu email" >
        </div>
        <div class="campo">
            <label >Password</label>
            <input type="password" name="password" placeholder="Tu password" autocomplete="cc-csc">
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="image" placeholder="Tu imagen de perfil">
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar Cambios">
        </div>
    </form>
</main>